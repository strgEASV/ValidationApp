<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dk.easv.validationapp.HelloController"
      prefWidth="400" prefHeight="300">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="User Information Form" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Name:" prefWidth="80"/>
        <TextField fx:id="nameField" promptText="Enter your name" prefWidth="250"/>
    </HBox>
    
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Age:" prefWidth="80"/>
        <TextField fx:id="ageField" promptText="Enter your age" prefWidth="250"/>
    </HBox>
    
    <Button text="Submit" onAction="#onSubmitButtonClick" prefWidth="150" style="-fx-font-size: 14px;"/>
    
    <Label fx:id="resultLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: blue;"/>
</VBox>
